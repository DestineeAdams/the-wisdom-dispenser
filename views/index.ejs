    <main>
      <article>
        <p id="quote"><%= quote %></p>
        <p id="person">-<%= author %></p>
      </article>
        
      <section>
        <h5>rate this quote</h5>
        
        <div id="ratings">
          <button>👍🏾</button>
          <button>👎🏾</button>
        </div>
      </section>
      
      <section>
        <h5>Add a quote</h5>
            
        <P id="quote-status">note</P>
    
        <form id="quoteForm">
          <input type="text" placeholder="Quote" name="inputQuote" id="inputQuote">
          <input type="text" placeholder="Author" name="inputAuthor" id="inputAuthor">
          <br>
          <button id="add" type="submit">Add</button>
        </form>    
      </section>
   
    
      <footer>
        <button>share</button>
        
        <a href="https://ko-fi.com/semcreates">
          <button> KO-FI </button>
        </a>

        <button>portfolio</button>
      </footer>
    
  </main>
    <script src="/main.js"></script>
  </body>
